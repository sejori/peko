{
  "tasks": {
    "start": "deno run --allow-net --allow-read --allow-env examples/preact/app.ts",
    "start:dev": "deno run --allow-net --allow-read --allow-env --watch examples/preact/app.ts",
    "test": "deno test --allow-read --allow-net",
    "profile": "deno run --allow-read --allow-net tests/scripts/profile.ts"
  },
  "fmt": {
    "options": {
      "useTabs": true,
      "lineWidth": 120,
      "indentWidth": 2,
      "semiColons": false,
      "singleQuote": false,
      "proseWrap": "preserve"
    }
  }
}